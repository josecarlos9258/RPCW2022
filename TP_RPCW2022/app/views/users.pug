extends layout

block content
	

	div(style="margin: 20px")

		h1 Utilizadores 

		table.w3-table-all.w3-hoverable 
			tr.w3-teal
				th Nome
				th Estatuto
				th Filiação
				th Data de Registo

			each user in users 
				tr
					td 
						a(href='/perfil/'+user._id) #{user.username}
					td= user.estatuto 
					td= user.filiacao
					td= user.dataRegisto